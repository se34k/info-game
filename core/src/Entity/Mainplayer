
public class Mainplayer extends Entity{
  private String name;
  private float velocity;
  private int hp;
  private Vector2 coordinates;
  private Texture texture;
  private boolean isAttackable;

  public Mainplayer(String pName, float pVelocity, World world){ 
    Vector2 coordinates = new Vector2(0, 0);
    this.hp = 20;
    this.name = pName;
    this.velocity = pVelocity;
    super.(pName, hp, pVelocity, world, 0, 0);
    isAttackable = true;
    
    texture = new Texture(Gdx.files.internal("....png"));
    Sprite sprite = new Sprite(texture);
     

  }

  public void move(float x, float y) {
    this.coordinates.x =+ x;
    this.coordinates.y =+ y;
    
  }
  
  public void moveX(float x){
    this.coordinates.x =+ x; 
    
  }
  
  public void moveY(float y){
    this.coordinates.y =+ y; 
    
  }
  
  public float getX(){
    return this.coordinates.x;    
  }
  
  public float getY(){
    return this.coordinates.Y;   
  }
  
  public float[] getPos(){
    float[] arr = {this.coordinates.x, this.coordinates.y};
    return arr;
  }
  
  public boolean isAttackable(){
    return isAttackable;
  }
    
  public float distanceTo(Entity entity) {
    //Pythagoras is our friend
    return (float) Math.sqrt(Math.pow(entity.getX() - getX(), 2) + Math.pow(getY() - getY(), 2));
  }
    
}